{% extends "base.html.jinja" %}

{% block content %}
    <div class="hero">
        <h1>{{ title }}</h1>
    </div>
    <div class="content">
        <section>
            <h2>Paste your burp request below</h2>
            <form method="POST">
                <textarea name="code" cols="80" rows="10" id="code">{{ raw_code }}</textarea><br>
                <input type="submit" value="Submit">
            </form>
        </section>
        {% if code %}
        	<section>
                <h2>Python output</h2>
                <textarea  cols="80" rows="15">{{ code }}</textarea>
            </section>
        {% endif %}
        <section>
            <h2>Navigation</h2>
            <a href="/">Go home</a>
        </section>
    </div>
{% endblock content %}
